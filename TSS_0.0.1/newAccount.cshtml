<html>

<head>
    <!-- Load Base -->
    @RenderPage("_Base.cshtml");
</head>

<body>
    <!-- Content -->
    <div class="container">
        <form class="col s12">
            <div class="row">
                <h2>Create New Account</h2>
            </div>
            <div class="row">
                <div class="input-field col s12 m6 l4">
                    <input id="first_name" type="text" class="validate">
                    <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s12 m6 l4">
                    <input id="last_name" type="text" class="validate">
                    <label for="last_name">Last Name</label>
                </div>
                <div class="input-field col s12 m12 l4">
                    <input id="user_name" type="text" class="validate">
                    <label for="user_name">Username</label>
                </div>
                <div class="input-field col s12 m6 l6">
                    <input id="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
                <div class="input-field col s12 m6 l6">
                    <input id="password2" type="password" class="validate">
                    <label for="password2">Varify Password</label>
                </div>
                <div class="input-field col s12 m12 l12">
                    <input id="email" type="email" class="validate">
                    <label for="email" data-error="please enter a valid email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <select>
                        <option value="0" disabled selected>Select a position</option>
                        <option value="1">Team Member</option>
                        <option value="2">School Representative</option>
                        <option value="3">Referee</option>
                    </select>
                    <label>User Account</label>
                </div>
            </div>
            
            <!-- Only for Team Members -->
            
            <div class="row ">
                <div class="input-field col s12 m6 l6">
                    <select>
                        <option value="0" disabled selected>Select a School</option>
                        <option value="1">School 1</option>
                        <option value="2">School 2</option>
                        <option value="3">School 3</option>
                    </select>
                    <label>School</label>
                </div>
                <div class="input-field col s12 m6 l6">
                    <select>
                        <option value="0" disabled selected>Select a Team</option>
                        <option value="1">Team 1</option>
                        <option value="2">Team 2</option>
                        <option value="3">Team 3</option>
                    </select>
                    <label>Team</label>
                </div>
            </div>
            
            <!-- Only for Representatives Members -->
            
            <div class="row ">
                <div class="input-field col s12 m12 l12">
                    <input id="school_name" type="text" class="validate">
                    <label for="school_name">Enter your School</label>
                </div>
            </div>
            
            <!-- Only for Referee Members -->
            
            <div class="row ">
                <div class="input-field col s12 m12 l12">
                    <input id="referee_code" type="text" class="validate">
                    <label for="referee_code">Enter provided referee code</label>
                </div>
            </div>
            
            <!-- Submit button -->
            
            <div class="row ">

                <div class="col offset-s4 offset-m8 offset-l10">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Create</button>
                </div>
            </div>

        </form>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            $('select').material_select();
        });
    </script>

</body>

</html>